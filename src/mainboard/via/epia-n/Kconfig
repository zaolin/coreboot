config BOARD_VIA_EPIA_N
	bool "EPIA-N"
	select ARCH_X86
	select CPU_VIA_C3
	select NORTHBRIDGE_VIA_CN400
	select SOUTHBRIDGE_VIA_VT8237R
	select SUPERIO_WINBOND_W83697HF
	select HAVE_PIRQ_TABLE

config MAINBOARD_DIR
	string
	default via/epia-n
	depends on BOARD_VIA_EPIA_N

